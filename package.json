{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "Simple test automation boilerplate",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test-frontend": "testcafe \"chrome --start-maximized\" ./tests/frontend --assertion-timeout 20000 --skip-js-errors",
    "test-frontend:report": "npm run test-frontend -- --reporter html:reports/frontend/report.html",
    "test-backend": "jest ./tests/backend",
    "test-all": "npm run test-backend & npm run test-frontend:report"
  },
  "author": "Sasha",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.13.10",
    "babel-jest": "^26.6.3",
    "frisby": "^2.1.2",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "jest-html-reporter": "^2.5.0",
    "testcafe": "^1.4.3"
  },
  "dependencies": {
    "node-fetch": "^2.6.1",
    "testcafe-reporter-html": "^1.4.4"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  }
}
